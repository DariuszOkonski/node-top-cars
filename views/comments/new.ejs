<%- include('../partials/header.ejs') %>

<div class="container mt-2">
  <h2><%= carID %></h2>
  <form action="/cars/<%= carID %>/comments?_method=PUT" method="POST">
    <div class="form-group">
      <label for="author">Author</label>
      <input name="comment[author]" type="text" class="form-control" id="author" required>
    </div>

    <div class="form-group">
      <label for="body">Comment</label>
      <textarea name="comment[body]" class="form-control" id="body" cols="20" rows="10" required></textarea>
    </div>

    <a class="btn btn-primary btn-sm"  href="/cars/<%= carID %>">Back</a>
    <button type="submit" class="btn btn-success btn-sm">Add Comment</button>
  </form>
</div>

<%- include('../partials/footer.ejs') %>